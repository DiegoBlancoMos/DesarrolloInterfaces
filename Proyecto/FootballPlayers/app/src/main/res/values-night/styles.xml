<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOscuro" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Colores de fondo -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="backgroundColor">@color/dark_background</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Estilos de componentes -->
        <item name="materialCardViewStyle">@style/Widget.CardView.Dark</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Dark</item>
        <item name="navigationViewStyle">@style/Widget.NavigationView.Dark</item>
    </style>

    <!-- Estilos adicionales para componentes especÃ­ficos en modo oscuro -->
    <style name="Widget.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/dark_surface</item>
        <item name="itemTextColor">@color/dark_text_primary</item>
        <item name="itemIconTint">@color/dark_text_primary</item>
    </style>

    <style name="Widget.App.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/dark_surface</item>
        <item name="titleTextColor">@color/dark_text_primary</item>
    </style>

    <style name="Widget.NavigationView.Dark" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/dark_surface</item>
        <item name="itemTextColor">@color/dark_text_primary</item>
        <item name="itemIconTint">@color/primary_light</item>
    </style>
</resources>